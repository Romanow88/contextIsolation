<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
        default-lazy-init="false">

  <bean id="testString" class="java.lang.String">
    <constructor-arg index="0" value="Hello from child 1"/>
  </bean>

  <bean id="exportTestString" factory-bean="root" factory-method="export">
    <constructor-arg index="0" value="testString"/>
    <constructor-arg index="1" ref="testString"/>
  </bean>

  <bean id="just-bean" class="java.lang.Integer">
    <constructor-arg value="42"/>
  </bean>

</beans>
